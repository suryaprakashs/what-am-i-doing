{
  "name": "What am I doing?",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Simple extension to track your site usage.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "main.html",
    "default_icon": "icons/icon16.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}